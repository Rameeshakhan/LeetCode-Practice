var lengthOfLongestSubstring = function(s) {
    let charIndexMap = {};
    let maxLength = 0;
    let startIndex = 0;

     for (let i = 0; i < s.length; i++) {
        if (charIndexMap[s[i]] !== undefined && charIndexMap[s[i]] >= startIndex) {
            startIndex = charIndexMap[s[i]] + 1;
        }
        charIndexMap[s[i]] = i;
        maxLength = Math.max(maxLength, i - startIndex + 1);
    }
    return maxLength;
};
